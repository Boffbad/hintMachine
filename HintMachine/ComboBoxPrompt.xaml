<Window x:Class="HintMachine.ComboBoxPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HintMachine"
        mc:Ignorable="d"
        Title="" Height="200" Width="400" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Prompt goes here." Name="Prompt" Margin="20, 10"/>
        <ComboBox Name="ComboMain" Grid.Row="1" Margin="20, 15"/>
        <Button Grid.Row="2" Width="100" Height="25" HorizontalAlignment="Right" Margin="20, 10" Content="Confirm" Click="Confirmed"/>
    </Grid>
</Window>
