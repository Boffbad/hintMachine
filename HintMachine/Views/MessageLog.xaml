<UserControl x:Class="HintMachine.Views.MessageLog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderThickness="1" BorderBrush="#FFABADB3">
        <ScrollViewer Name="ScrollViewer" VerticalScrollBarVisibility="Auto">
            <StackPanel Name="StackPanelMessages">
            </StackPanel>
        </ScrollViewer>
        <Border.Background>
            <ImageBrush ImageSource="/Assets/logo_small.png" Opacity="0.10" AlignmentX="Right" AlignmentY="Bottom" Stretch="None"/>
        </Border.Background>
    </Border>
</UserControl>
