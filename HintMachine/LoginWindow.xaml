<Window x:Class="HintMachine.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HintMachine"
        mc:Ignorable="d"
        Title="HintMachine" Height="186" Width="466" Background="#FFEEEEEE" ResizeMode="NoResize" Icon="/icon.png">
    <Grid HorizontalAlignment="Center" Width="400" Height="160" VerticalAlignment="Top" Margin="0,16,0,0">

        <Label Content="Archipelago host :" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="archipelagoAddress" Height="23" Margin="122,3,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="archipelago.gg:12345"/>

        <Label Content="Slot name :" HorizontalAlignment="Left" Margin="0,31,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="slotName" Height="23" Margin="122,32,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>

        <Button Content="Connect" HorizontalAlignment="Center" Margin="0,78,0,0" VerticalAlignment="Top" Width="233" Click="Button_Click" Height="37"/>
    </Grid>
</Window>
